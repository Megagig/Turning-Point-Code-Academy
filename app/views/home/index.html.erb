<div class="jumbotron">
  <h1 class="display-4">What do you want to learn today?</h1>
  <div class="p-4">
    <% if current_user %>
      <%= search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f| %>
        <div class="input-group">
          <%= f.search_field :title_cont, class: 'form-control-sm', style: 'float: left; width: 150px;', placeholder: 'Find a course', autocomplete: :off %>
          <span class="input-group-append">
            <button class="btn btn-primary btn-sm" type="submit">
              <span class="fa fa-search" aria-hidden="true"></span>
            </button>
          </span>
        </div>
      <% end %>
    <% end %>

    <div class="card-group">
      <div class="card card-body">
        <h1><span class="fa fa-graduation-cap"></span></h1>
        <%= Course.count %> online courses
        <div class="row">
          Explore a variety of fresh topics
        </div>
      </div>
      <div class="card card-body">
        <h1><span class="fa fa-chalkboard-teacher"></span></h1>
        <%= Course.distinct.count(:user_id) %> expert instructors
        <div class="row">
          Find the right instructor for you
        </div>
      </div>
      <div class="card card-body">
        <h1><span class="fa fa-user-graduate"></span></h1>
        <%= User.count %> active learners
        <div class="row">
          Join the knowledge sharing community
        </div>
      </div>
      <div class="card card-body">
        <h1><span class="fa fa-infinity"></span></h1>
        Lifetime access
        <div class="row">
          Learn on your schedule
        </div>
      </div>
    </div>

    <hr>

    <h2>Popular courses</h2>
<div class="card-columns">
  <% if @popular_courses.present? %>
    <% @popular_courses.each do |course| %>
      <%= render 'courses/course', course: course %>
    <% end %>
  <% else %>
    <p>No popular courses available.</p>
  <% end %>
</div>

<hr>

<h2>Top rated courses</h2>
<div class="card-columns">
  <% if @top_rated_courses.present? %>
    <% @top_rated_courses.each do |course| %>
      <%= render 'courses/course', course: course %>
    <% end %>
  <% else %>
    <p>No top-rated courses available.</p>
  <% end %>
</div>

<!-- here comes the rest of your code for latest courses -->
    <hr>

    <h2>Latest courses</h2>
    <div class="card-columns">
      <% if @latest_courses.present? %>
        <% @latest_courses.each do |course| %>
          <%= render 'courses/course', course: course %>
        <% end %>
      <% else %>
        <p>No latest courses available.</p>
      <% end %>
    </div>

    <hr>
  </div>
</div>
